<p id="notice"><%= notice %></p>

<h1>Locations</h1>

<table>
  <thead>
    <tr>
      <th>Production</th>
      <th>Address</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @locations.each do |location| %>
      <tr>
        <td><%= location.name %></td>
        <td><%= location.address %></td>
      </tr>
    <% end %>
  </tbody>
  <ul id="dynamic-list"></ul>
</table>
<input type="text" id="candidate"/>
<button onclick="addItem()">Add Location</button>
<button onclick="removeItem()">Remove Location</button>
<br>
